.login {
  display: flex
  flex-direction column

  padding: 10px 20px
  border: 2px solid #ffdb4d

  font-family: Arial;

  &__title {
    font-size: 20px;
    padding: 10px;
  }

  &__soc-networks {
    display: flex
    justify-content center
  }

  &__soc {
    display: block
    height: 40px
    width 40px
    margin 10px 15px

  }
  &__vk {
    @extend .login__soc
    background: url("data:image/svg+xml;base64,");
    background-size contain

  }
  &__fb {
    @extend .login__soc
    background: url("data:image/svg+xml;base64,");
    background-size contain

  }
}