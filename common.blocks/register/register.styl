.register {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  font-family: 'Open Sans', sans-serif;

  &__title {
    text-align: center;
    font-size: 24px;
    color: white;
    margin: 20px 0 0;
  }

  &__field {
    display: flex;
    justify-content: center;
    margin: 20px 0;
  }

  &__actions {
    display: flex;
    justify-content: center;
    margin: 20px 0;
  }

  &__button {
    font-family: 'Open Sans', sans-serif;
    background: transparent;
    color: white;
    height:55px;
    width: 55px;
    border: 2px solid white;
    border-radius: 50%;
    font-weight: 700;
    font-size:26px;
  }

}