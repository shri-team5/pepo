.header {
  display: flex;

  background: linear-gradient(to right, $baseColor, $baseColorLighter);
  .header__submit{
    display: none;
  }
  &_allowSubmit{
    .header__submit{
      display: inherit;
    }
  }

  &__column {
    display: flex;
    align-items: center;
    margin: 0 15px;
    flex: 1 0 auto;

    &_align {
      &_right {
        justify-content: flex-end;
      }
    }
  }

  &__plus,
  &__back,
  &__burger,
  &__submit {
    display: flex;
    align-items: center;
    cursor: pointer;
  }

  &__icon {
    width: 22px;
    height: 22px;
  }

  &__standard {
    display: none;
    &_visible {
      display: initial;
    }
  }
  &__newTweet {
    display: none;
    &_visible {
      display: inherit;
    }
  }

  &__name {
    font-family: 'Open Sans', sans-serif;
    font-size: 18px;
    color: white;
    width: 100%;
    text-align: center;
  }
}
