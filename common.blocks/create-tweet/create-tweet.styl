.create-tweet {
  display: none
  background: $pepoLinearGradient;
  border-radius: 50%;
  padding: 15px;
  box-shadow: 1px 1px 3px 0px rgba(0,0,0,0.6);
  width: $createTweetSize - @padding * 2;
  height: $createTweetSize - @padding * 2;

  &_visible {
    display: block;
  }

  &__icon {
    width: 100%;
    height: 100%;
  }
}
