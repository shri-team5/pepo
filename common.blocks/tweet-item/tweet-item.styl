.tweet-item {
  display: flex;
  font-family: 'Open Sans', sans-serif;
  align-items: flex-start;
  &__userpic {
    margin: 5px 10px 0 0;
    padding: 10px;
    /*border-right: 1px solid #cbcbcb;*/
    border-radius: 50%;
    max-width: 45px;
  }
  &__username {
    margin: 0 0 0 0;
    height: 40px;
    color: #d95d92;
    font-size: 13px;
    text-decoration: none;
    max-width: 135px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    position: relative;
    padding-right: 15px;
    &:after {
      content: attr(title);
      font-family: 'Open Sans';
      font-size: 12px;
      color: #808080;
      position: absolute;
      left: 0;
      top: 18px;
    }
  }
  &__content {
    width: 100%;
    padding: 10px 0 0;
  }
  &__text {
    padding: 0 0 10px 0;
    font-size: 13px;
    color: #666;
  }
  &__head {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    padding: 0 10px 0 0;
  }
  &__created {
    font-size: 11px;
    color: gray;
    font-style: italic;
  }
}