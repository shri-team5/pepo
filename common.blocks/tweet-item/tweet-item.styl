.tweet-item {
    display:flex;
    border: 1px solid #f0f0f0;

    font-family: Arial;
    border-radius: 2px;
}

.tweet-item__userpic{
    margin: 0 0 0 0;
    padding: 10px;
    /*border-right: 1px solid #cbcbcb;*/
}

.tweet-item__username{
    margin: 0 0 0 0;
        color: #33c;
    font-size: 13px;
}
.tweet-item__content{
    width:100%;
    padding: 10px 0;
}
.tweet-item__text{
    padding: 10px;
    font-size: 13px;
}
.tweet-item__head{
    display: flex;
    justify-content: space-between;
    padding: 0 10px;
}

.tweet-item__created{
	font-size: 11px;
	color: gray;
}