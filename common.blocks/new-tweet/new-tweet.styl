.new-tweet {
  //display: none;
  position: absolute;
  left: -100vw;
  right: 0;
  bottom: 0;
  top: 45px;
  width: 100%;
  height: calc(100vh - 45px);
  background: white;

  transition: left 0.3s 0s;
  z-index: 100;
  &_visible {
    //display: block;
    left: 0;
  }

  &__input {
    height: 120px;

    &:after{
      content: attr(name);
      display: block;
    }
  }

  &__input-wrap {
    position: relative;
    &:after{
      content: attr(data-counter);
      display: block;
      position: absolute;
      right: 0;
      bottom: 0;
      padding: 10px;
      font-size: 18px;
      font-family: 'Open Sans', Arial, Helvetica, sans-serif;
      color: #808080;
    }
  }

  &__reply {
    display: none;
  }

  &__attach {
    padding: 5px 0;
  }
  &__location {
    display: block
    padding: 5px 0;
  }
  &__actions {
    padding: 0 10px;
  }

  &__create-tweet {
    position: fixed;
    bottom: 60px;
    right: 25px;
  }

  &__link-preview {
      display: none;
  }

  &__link-preview_visible {
      display: block;
  }
}
