.userinfo {

  font-family: Arial;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  background: linear-gradient(to right, #944a71, #d95d92);
  padding-bottom: 15px;

  &__row {
    display: flex;
    align-items: flex-start;
    width: 100%;
  }
  &__fullname {
    color: white;
    text-decoration: none;
  }
  &__userpic {
    margin: 10px 10px 10px 20px;
    align-items: flex-start;
    max-width: 75px;
  }
  &__info {
    margin: 10px;
    flex: 1;
    color: white;
    word-break: break-word;
  }
  &__username {
    font-size: 12px;
    color: white;
  }
  &__user-menu {
    margin: 10px
  }
  &__description {
    margin: 10px 0;
    font-size: 14px;
    color: white;
  }

  &__counters {
    display: flex;
    justify-content: space-around;
    width: 100%;
    padding: 5px 0;
  }

  &__subscribe {
    display: flex;
    flex: 1;
    padding: 15px 0 5px;
    justify-content: center;
  }
}
