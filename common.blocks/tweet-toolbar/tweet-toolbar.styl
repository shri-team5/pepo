.tweet-toolbar {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;

  &__left {
    max-width: 70%;
  }

  &__actions {
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin-right: 5px;
  }

  &__replies-link {
    font-family: 'Open Sans', sans-serif;
    color: $baseColorLighter;
    font-size: 13px;
    text-decoration: none;
    border-bottom: 1px dashed #d95d92;
    margin: 0 5px;
  }

  &__like,
  &__reply,
  &__retweet,
  &__delete {
    width: 18px;
    height: 18px;
    margin: 0 10px;
    cursor: pointer;
  }

}
