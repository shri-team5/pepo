.burger {
  display: none

  @media screen and (max-width: 600px) {
    display: flex
    position: relative
    height: 20px
    width: 25px
    align-items center
    cursor: pointer
  }
  &--hide {
    display: none
  }

  &__line {
    display: block
    height: 2px
    width: 100%
    background: #fff
  }
  &:before {
    content: ''
    position: absolute
    top: 0
    @extend .burger__line
  }
  &:after {
    content: ''
    position: absolute
    bottom: 0
    @extend .burger__line
  }
}