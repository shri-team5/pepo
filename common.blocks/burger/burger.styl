.burger{
  display: flex
  position: relative
  height: 20px
  width:25px
  align-items center
  cursor:pointer
  &__line{
    display: block
    height: 2px
    width:100%
    background: #000000
  }
  &:before{
    content:''
    position: absolute
    top: 0
    display: block
    height: 2px
    width:100%
    background: #000000
  }
  &:after{
    content:''
    position: absolute
    bottom: 0
    display: block
    height: 2px
    width:100%
    background: #000000

  }

}