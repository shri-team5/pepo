.aside{
  width: 160px;
  border-right 1px solid #f0f0f0;
  font-family: Arial
}

  @media screen and (max-width: 600px){
    .aside{
      display: none

      &_visible{
        display: block;
        position: absolute;
        left: 0;
        right: 0;
        bottom: 0;
        top: 47px;
        width: 100vw;
        background: linear-gradient(to right, #944a71, #d95d92);
      }
    }
  }