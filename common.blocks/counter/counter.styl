.counter {
    display: flex
    flex-direction: column;
    align-items: center

    font-family: 'Open Sans', sans-serif;
    color: white;

    &__number {
        font-size: 2rem;
        align-self: flex-start;
    }

    &__text {
        font-size: .7rem
        text-transform: uppercase;
    }
}
