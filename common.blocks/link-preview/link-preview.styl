.link-preview {
    display: flex;

    width: 100%;
    height: 100px;
    padding: 10px;

    // background-color: orange;
    font: 13px Arial, open-sans;

    box-sizing: border-box;

    &__image {
        width: 25%;

        img {
            width: auto;
            height: auto;
            max-width: 100%;
            min-width: 100%;
            max-height: 100%;
            min-height: 100%;
            object-fit: contain;
        }
    }

    &__text {
        width: 75%;
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        margin-left: 10px;
    }

    &__description {
        font-size: 11px;
    }
}
