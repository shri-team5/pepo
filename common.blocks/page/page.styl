html {
    height: 100%;
}

.page {
  margin: 0
  padding: 0
  display: flex
  flex-direction: column;
  height: 100%;
  min-height: 100%;
  overflow: hidden;

  -webkit-tap-highlight-color: rgba(201, 224, 253, 0.0);

  &__header {
    height: 45px;
    //border-bottom: 1px solid #f0f0f0;
  }

  &__content-wrapper {
    display: flex;
    flex: 1;
    //display: block;
    height: 100%;
  }

  &__main {
    diplay: flex;
    flex: 1;
  }

  &__login {
    display: flex
    align-self: center
    justify-content: center
    width: 100%;
    height: 100%;
    background: linear-gradient(to right, #944a71,#d95d92);
  }


  &__registration {
    display: flex
    align-self: center
    justify-content: center
    width: 100%;
    height: 100vh;
    background: linear-gradient(to right, #944a71,#d95d92);
  }
}
